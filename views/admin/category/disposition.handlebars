<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Page Heading
            <small>Secondary Text</small>
        </h1>

        <!-- Blog Post -->
        {{#each posts}}


            <div class="card mb-4">
                <img class="card-img-top" src="{{file}}"" alt="Card image cap">
                <div class="card-body">
                    <h2 class="card-title">{{title}}</h2>
                    <p class="card-text">{{description}}</p>
                  
                </div>
               
            </div>

        {{/each}}


    </div>

</div>
<!-- /.row -->
